<h1>Forum's List</h1>

  <% if @topic.errors.any? %>
    <ul>
      <% @topic.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>

<%= form_for @topic, :url => topics_path do |f| %>

  <div class="form-group">
    <%= f.label :name, "Name" %>
    <%= f.text_field :name, :class => "foem-control" %>
  </div>

  <div class="form-group">
    <%= f.label :description, "Descrription" %>
    <%= f.text_area :description, :class => "form-control" %>
  </div>

  <div class="form-group">
    <%= f.submit "Create", :class => "btn btn-primary" %>
  </div>

<% end %>

<div class="table">
  <ul>
  <% @topics.each do |t| %>
    <li>
      <%= link_to t.name, topic_path(t) %>
      <%= link_to "Edit", edit_topic_path(t) %>
      <%= link_to "Delete", topic_path(t), :method => :delete, :data => {:confirm => "Are you sure?"} %>
    </li>
  <% end %>
  </ul>
</div>

<%= paginate @topics, :theme => 'twitter-bootstrap-3' %>